<?xml version="1.0" encoding="UTF-8"?>
<configuration scan ="true" scanPeriod = "30seconds">

<root level="INFO">
<appender-ref ref="CONSOLE"/>
<!--<appender-ref ref = "FILE"/>-->
</root>

<!-- Console Appender -->
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p [%thread] %logger{36} Line:[%L]  - %msg%n</pattern>
        </encoder>
    </appender>
    
